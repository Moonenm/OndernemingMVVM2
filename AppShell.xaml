<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OndernemingMVVM2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OndernemingMVVM2.Views"
    Title="OndernemingMVVM2"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Voorbeeld"
        ContentTemplate="{DataTemplate views:Voorbeeld}" />
    <ShellContent
        Title="IpAdres"
        ContentTemplate="{DataTemplate views:IpAdresPage}"
        Route="IpAdresPage" />

    <ShellContent
        Title="Movies"
        ContentTemplate="{DataTemplate views:MoviePage}"
        Route="MoviePage" />

    <ShellContent
        Title="ViewToView"
        ContentTemplate="{DataTemplate views:ViewToViewPage}"
        Route="ViewToViewPage" />
</Shell>
